<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fulu.game.core.dao.SysRolePermissionDao">
    <resultMap id="SysRolePermissionResultMap" type="com.fulu.game.core.entity.SysRolePermission">
        <id column="permission_id" property="permissionId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>


    <sql id="Base_Column_List"> permission_id,role_id </sql>


    <select id="findSysPermissionByRoleId" parameterType="java.lang.Integer" resultType="com.fulu.game.core.entity.SysPermission">
        SELECT * FROM sys_permission p
        WHERE p.id in
        (
            SELECT sp.permission_id FROM sys_role_permission sp
            WHERE sp.role_id = #{roleId}
        )
    </select>

</mapper>