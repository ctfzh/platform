<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fulu.game.core.dao.ChannelDao">
    <resultMap id="ChannelResultMap" type="com.fulu.game.core.entity.Channel">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="appid" property="appid"/>
        <result column="appkey" property="appkey"/>
        <result column="balance" property="balance"/>
        <result column="admin_id" property="adminId"/>
        <result column="admin_name" property="adminName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="ChannelResultVOMap" type="com.fulu.game.core.entity.vo.ChannelVO" extends="ChannelResultMap">
    </resultMap>

    <sql id="Base_Column_List">
        id,name,appid,appkey,balance,admin_id,admin_name,create_time,update_time    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="ChannelResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_channel
        <where>
            id = #{id}
        </where>
    </select>

    <select id="findAll" resultMap="ChannelResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_channel
    </select>

    <select id="findByParameter" resultMap="ChannelResultMap" parameterType="com.fulu.game.core.entity.vo.ChannelVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_channel
        <where>
            <if test="appid != null">
                and appid = #{appid}
            </if>
            <if test="adminId != null">
                and admin_id = #{adminId}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
        </where>
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from t_channel
        <where>
            id = #{id}
        </where>
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.fulu.game.core.entity.Channel">
        insert into
        t_channel (name,appid,appkey,balance,admin_id,admin_name,create_time,update_time)
        values
        (#{name},#{appid},#{appkey},#{balance},#{adminId},#{adminName},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="com.fulu.game.core.entity.Channel">
        update t_channel
        <set>

            <if test="name != null">
                name = #{name},
            </if>

            <if test="appid != null">
                appid = #{appid},
            </if>

            <if test="appkey != null">
                appkey = #{appkey},
            </if>

            <if test="balance != null">
                balance = #{balance},
            </if>

            <if test="adminId != null">
                admin_id = #{adminId},
            </if>

            <if test="adminName != null">
                admin_name = #{adminName},
            </if>

            <if test="createTime != null">
                create_time = #{createTime},
            </if>

            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>