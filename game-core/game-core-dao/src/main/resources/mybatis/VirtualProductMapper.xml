<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fulu.game.core.dao.VirtualProductDao">
    <resultMap id="VirtualProductResultMap" type="com.fulu.game.core.entity.VirtualProduct">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="type" property="type"/>
        <result column="sort" property="sort"/>
        <result column="object_url" property="objectUrl"/>
        <result column="remark" property="remark"/>
        <result column="del_flag" property="delFlag"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <resultMap id="VirtualProductResultVOMap" type="com.fulu.game.core.entity.vo.VirtualProductVO" extends="VirtualProductResultMap">
        <result column="user_id" property="userId"/>
        <result column="buy_status" property="buyStatus"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,price,type,sort,object_url,remark,del_flag,update_time,create_time    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="VirtualProductResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_virtual_product
        <where>
            id = #{id}
        </where>
    </select>

    <select id="findAll" resultMap="VirtualProductResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_virtual_product
    </select>

    <select id="findByParameter" resultMap="VirtualProductResultMap"
            parameterType="com.fulu.game.core.entity.vo.VirtualProductVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_virtual_product
        <where>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="objectUrl != null">
                and object_url = #{objectUrl}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <select id="findAllGift" resultType="com.fulu.game.core.entity.VirtualProduct">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_virtual_product
        WHERE
          type = 1
        AND del_flag = 0
        ORDER BY
          sort ASC;
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from t_virtual_product
        <where>
            id = #{id}
        </where>
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.fulu.game.core.entity.VirtualProduct">
        insert into
        t_virtual_product (name,price,type,sort,object_url,remark,del_flag,update_time,create_time)
        values
        (#{name},#{price},#{type},#{sort},#{objectUrl},#{remark},#{delFlag},#{updateTime},#{createTime})
    </insert>

    <update id="update" parameterType="com.fulu.game.core.entity.VirtualProduct">
        update t_virtual_product
        <set>

            <if test="name != null">
                name = #{name},
            </if>

            <if test="price != null">
                price = #{price},
            </if>

            <if test="type != null">
                type = #{type},
            </if>

            <if test="sort != null">
                sort = #{sort},
            </if>

            <if test="objectUrl != null">
                object_url = #{objectUrl},
            </if>

            <if test="remark != null">
                remark = #{remark},
            </if>

            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>

            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>

            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="findByVirtualProductVo" resultMap="VirtualProductResultVOMap" parameterType="com.fulu.game.core.entity.vo.VirtualProductVO">
        SELECT
        t1.*,
        if(t2.id is not null ,0,1) as buy_status
        FROM
        t_virtual_product t1
        LEFT JOIN t_virtual_product_order t2 ON t1.id = t2.virtual_product_id
        <where>
            <if test="type != null">
                and t1.type = #{type}
            </if>
            <if test="delFlag != null">
                and t1.del_flag = #{delFlag}
            </if>
            <if test="userId != null">
                AND t1.id IN (
                    SELECT
                    virtual_product_id
                    FROM
                    t_virtual_product_attach
                    WHERE
                    user_id = #{userId}
                    GROUP BY
                    virtual_product_id
                )
            </if>
            <if test="targetUserId != null">
                and t2.target_user_id = #{targetUserId}
            </if>
        </where>
        ORDER BY t1.id
    </select>
</mapper>